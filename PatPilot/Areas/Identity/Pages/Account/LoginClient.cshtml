<div class="login-boxc animate__animated animate__zoomIn">
    <h2>Connexion Client</h2>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.UserName">Utilisateur</label>
            <input asp-for="Input.UserName" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Mot de passe</label>
            <input asp-for="Input.Password" type="password" class="form-control" required />
        </div>

        <button type="submit">Se connecter</button>

        <a asp-page="./ForgotPassword" class="forgot-password">Mot de passe oublié ?</a>
    </form>
</div>

