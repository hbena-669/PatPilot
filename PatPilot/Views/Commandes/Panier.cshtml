@model EnsPanier
@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
@{
    ViewData["Title"] = "Mon Panier";
    Guid EnseignId;
    decimal total = 0;
    if (Model != null && Model.CommandeDetailList != null)
    {
        total = Model.CommandeDetailList.Sum(item => item.Gateau.Price * item.Quantite);
        //EnseignId = 
    }
    
}

<div class="container mt-5">
    <h2 class="mb-4">🛒 Mon Panier</h2>
    @if (Model == null || Model.CommandeDetailList == null)
    {
        <div class="alert alert-info">Votre panier est vide.</div>
        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-action="Index" asp-route-id="@Model.EnseigneId" class=" btn btn-outline-primary btn-lg">
                ➕ Ajouter un gâteau
            </a>
        </div>
    }
    else if(!Model.CommandeDetailList.Any())
    {
        <div class="alert alert-info">Votre panier est vide.</div>
        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-action="Index" asp-route-id="@Model.EnseigneId" class=" btn btn-outline-primary btn-lg">
                ➕ Ajouter un gâteau
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Gâteau</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Sous-total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CommandeDetailList)
                    {
                        <tr>
                            <td style="width:100px">
                                <img src="@Url.Content("~/" + item.Gateau.Image)" alt="@item.Gateau.Name" class="img-thumbnail" style="max-height:80px;" />
                            </td>
                            <td>@item.Gateau.Name</td>
                            <td>@item.Gateau.Price €</td>
                            <td>
                                <form asp-action="ModifierQuantite" method="post" class="d-flex justify-content-center align-items-center">
                                    <input type="hidden" name="gateauId" value="@item.GateauId" />
                                    <input type="number" name="quantite" value="@item.Quantite" min="1" class="form-control w-50 me-2" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">✔️</button>
                                </form>
                            </td>
                            <td><strong>@(item.Gateau.Price * item.Quantite) €</strong></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-light">
                        <th colspan="4" class="text-end">Total</th>
                        <th class="text-success">@total €</th>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-3">
            <a asp-action="Index" asp-route-id="@Model.EnseigneId" class=" btn btn-outline-primary btn-lg">
                ➕ Ajouter un gâteau
            </a>
            <form asp-action="ConfirmerCommande" method="post">
                <button type="submit" class="btn btn-success btn-lg">
                    ✅ Confirmer ma commande
                </button>
            </form>
        </div>

    }
</div>
