@using Microsoft.AspNetCore.Identity
@using PatPilot.Extensions
@using PatPilot.Models.DTO
@using System.Text.Json
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@functions {
    bool isConnected()
    {
        if (User == null) return false;
        if (SignInManager.IsSignedIn(User) &&
            UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Customer").Result 
            //&& HttpContextAccessor.HttpContext.Session.GetObjectFromJson<Client>("Client") != null
        ) return true;
        else return false;
    }
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewBag.EnseigneName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/ItemGateau.css" />
    <link rel="stylesheet" href="~/css/Enseigne.css" />
    <link rel="stylesheet" href="~/css/Banner.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
        <div class="container">
            <!-- Logo + Nom -->
            @await Component.InvokeAsync("InfosEnseigne")

            <!-- Burger menu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu items -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav align-items-center fs-5 fw-semibold">
                    @if (!isConnected())
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary d-flex align-items-center" asp-area="Identity" asp-page="/Account/LoginClient" asp-route-target="client">
                                <i class="bi bi-box-arrow-in-right text-white me-2"></i>Je suis client
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="ClientAccount" asp-action="RegisterClient">
                                <i class="bi bi-pencil-square me-1"></i> Créer un compte
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <div class="d-flex align-content-between">
                                <a class="btn btn-pink me-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    <i class="bi bi-person-hearts text-black me-2"></i> @User.Identity?.Name
                                </a>
                                @* <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
                                    </button>
                                </form> *@
                                <a class="btn btn-danger me-2" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm">
                                    <i class="bi bi-box-arrow-right text-white "></i> Déconnection
                                </a>
                                <!-- Bouton Panier -->
                                <a asp-action="Panier" class="btn btn-success btn-lg">
                                    <i class="bi bi-cart"></i> Voir le Panier (@ViewBag.NbArticles)
                                </a>
                                
                            </div>
                        </li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenu principal -->
    <div class="container d-flex justify-content-center  pt-5">
        @RenderBody()
    </div>

    <!-- Pied de page -->
    <footer class="border-top footer text-muted text-center mt-3 py-3">
        <div class="container">
            &copy; @DateTime.Now.Year - @ViewBag.EnseigneNom
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
