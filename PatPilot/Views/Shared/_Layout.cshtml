@using Microsoft.AspNetCore.Identity
@using System.Text.Json;
@using PatPilot.Models.DTO
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@functions {
    string GetUserBackgroundClass()
    {
        if (SignInManager.IsSignedIn(User))
        {
            var user = UserManager.GetUserAsync(User).Result;
            if (user != null)
            {
                if (UserManager.IsInRoleAsync(user, "Admin").Result)
                    return "bg-admin";
                if (UserManager.IsInRoleAsync(user, "AdminEnseigne").Result)
                    return "bg-admin-enseigne";
                return "bg-user";
            }
        }
        return "bg-default"; // Si l'utilisateur n'est pas connecté
    }

    string getLogo()
    {
        var logo = string.Empty;
        if (SignInManager.IsSignedIn(User))
        {
            var user = UserManager.GetUserAsync(User).Result;
            var enseigneJson = HttpContextAccessor.HttpContext.Session.GetString("Enseigne");
            EnseigneDTO enseigne = null;

            if (!string.IsNullOrEmpty(enseigneJson))
            {
                enseigne = JsonSerializer.Deserialize<EnseigneDTO>(enseigneJson);
            }

            if (user != null)
            {
                if (UserManager.IsInRoleAsync(user, "Admin").Result)
                    logo = "~/img/Patpilot.webp";
                if (UserManager.IsInRoleAsync(user, "AdminEnseigne").Result)
                    logo = $"~/img/{enseigne?.Logo}";
                //return logoenseigne
            }
        }
        return string.IsNullOrEmpty(logo) ? @Url.Content("~/img/Patpilot.webp") : @Url.Content(logo) ;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PatPilot</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PatPilot.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        
    </style>
    <script>
        function toggleSidebar(event) {
            event.stopPropagation(); // Empêche la propagation du clic
            let sidebar = document.querySelector(".sidebar");
            sidebar.classList.toggle("show");

            // Gestion du clic en dehors de la sidebar pour fermer
            if (sidebar.classList.contains("show")) {
                document.addEventListener("click", closeSidebarOnClickOutside);
            } else {
                document.removeEventListener("click", closeSidebarOnClickOutside);
            }
        }

        function closeSidebarOnClickOutside(event) {
            let sidebar = document.querySelector(".sidebar");
            let menuButton = document.querySelector("#menuButton");

            if (!sidebar.contains(event.target) && event.target !== menuButton) {
                sidebar.classList.remove("show");
                document.removeEventListener("click", closeSidebarOnClickOutside);
            }
        }

        // Fermer la sidebar en cliquant sur le bouton de la navbar
        function HideSidebar() {
            document.querySelector(".sidebar").classList.remove("show");
            document.removeEventListener("click", closeSidebarOnClickOutside);
        }
    </script>
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-gradient border-bottom box-shadow">
            <div class="container-fluid hmenu">
                <button id="menuButton" class="btn btn-light d-md-none justify-content-start" onclick="toggleSidebar(event)">
                    <i class="bi bi-list"></i> Menu
                </button>
                <a class="navbar-brand me-1" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" onclick="HideSidebar()">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial" />
                </div>

            </div>
        </nav>
    </header>

    <div class="sidebar">
        <img src="@getLogo()" alt="PatPilot Logo" />
        @if (SignInManager.IsSignedIn(User))
        {
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Enseignes" asp-action="Index"><i class="bi bi-shop me-2"></i> Enseignes</a>
                <a asp-controller="Statistic" asp-action="Index"><i class="bi bi-bar-chart-line me-2"></i> Statistiques</a>
            }
            @if (User.IsInRole("AdminEnseigne"))
            {
                <a asp-controller="Orders" asp-action="Index"><i class="bi bi-basket2 me-2"></i> Mes Commandes</a>
                <a asp-controller="Gateaux" asp-action="Index"><i class="bi bi-cake2 me-2"></i> Mes Gâteaux</a>
            }
        }
    </div>

    <div class="content h-100">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center mt-3">
        <div class="container">
            &copy; 2025 - PatPilot - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
