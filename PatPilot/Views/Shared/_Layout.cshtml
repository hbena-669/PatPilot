@using Microsoft.AspNetCore.Identity
@using PatPilot.Extensions
@using PatPilot.Models.DTO
@using System.Text.Json
@using PatPilot.Utils
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

@{
    var pending = ViewBag.PendingCount ?? 0;
}
@functions {
    string GetUserBackgroundClass()
    {
        if (SignInManager.IsSignedIn(User))
        {
            var user = UserManager.GetUserAsync(User).Result;
            if (user != null)
            {
                if (UserManager.IsInRoleAsync(user, "Admin").Result)
                    return "bg-admin";
                if (UserManager.IsInRoleAsync(user, "AdminEnseigne").Result)
                    return "bg-admin-enseigne";
                return "bg-user";
            }
        }
        return "bg-default"; // Si l'utilisateur n'est pas connecté
    }

    string getLogo()
    {
        var logo = string.Empty;
        if (SignInManager.IsSignedIn(User))
        {
            var user = UserManager.GetUserAsync(User).Result;
            var enseigneJson = HttpContextAccessor.HttpContext.Session.GetString(Constantes.S_enseigne_admin);
            EnseigneDTO enseigne = null;

            if (!string.IsNullOrEmpty(enseigneJson))
            {
                enseigne = JsonSerializer.Deserialize<EnseigneDTO>(enseigneJson);
            }

            if (user != null)
            {
                if (UserManager.IsInRoleAsync(user, "Admin").Result)
                    logo = "~/img/Patpilot.webp";
                if (UserManager.IsInRoleAsync(user, "AdminEnseigne").Result && enseigne != null)
                    logo = $"~/img/{enseigne?.Logo}";
                //return logoenseigne
            }
        }
        return string.IsNullOrEmpty(logo) ? @Url.Content("~/img/Patpilot.webp") : @Url.Content(logo);
    }

    bool isConnected()
    {
        if (User == null) return false;
        if (SignInManager.IsSignedIn(User) &&
            UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "Admin").Result) return true;
        else if (SignInManager.IsSignedIn(User) &&
            UserManager.IsInRoleAsync(UserManager.GetUserAsync(User).Result, "AdminEnseigne").Result &&
            HttpContextAccessor.HttpContext.Session.GetObjectFromJson<Enseigne>("Enseigne") != null) return true;
        else return false;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionGateau</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="@getLogo()" alt="Logo" class="logo-grand" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (isConnected())
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle menu-admin-icon" href="#" id="adminMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-menu-app-fill"></i>
                                    </a>
                                    <ul class="dropdown-menu fs-3" aria-labelledby="adminMenu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Enseignes" asp-action="Index">
                                                <i class="bi bi-shop me-2"></i> Enseignes
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Statistic" asp-action="Index">
                                                <i class="bi bi-bar-chart-line me-2"></i> Statistiques
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Evenement" asp-action="Index">
                                                <i class="bi bi-cake2-fill"></i> Evenements
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            if (User.IsInRole("AdminEnseigne") )
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle fs-3" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Menu
                                    </a>
                                    <ul class="dropdown-menu fs-3" aria-labelledby="userMenu">
                                        <li>
                                            <a class="dropdown-item d-flex justify-content-between align-items-center" asp-controller="Orders" asp-action="Orders">
                                                <span>
                                                    <i class="bi bi-basket2 me-2"></i> Mes Commandes
                                                </span>
                                                @if (pending > 0)
                                                {
                                                    <span class="badge bg-danger ms-2">@pending</span>
                                                }
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Gateaux" asp-action="Index">
                                                <i class="bi bi-cake-fill me-2"></i> Mes Gâteaux
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container d-flex justify-content-center  pt-5">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-auto py-3 bg-light text-center">
        <div class="container">
            &copy; 2025 - GestionGateau - <a asp-area="" asp-controller="Home" asp-action="Privacy">Confidentialité</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
