@model RegisterClientViewModel

@{
    ViewData["Title"] = "Créer un compte client"; 
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card animate__animated animate__zoomIn p-4 rounded-4" style="width: 100%; max-width: 600px; background-color: #fef6f9;">
        <h2 class="text-center mb-4 text-secondary">
            <i class="bi bi-person-plus-fill"></i> Créer un compte client
        </h2>

        <form asp-action="RegisterClient" method="post">
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Nom </label>
                <input asp-for="UserName" class="form-control rounded-pill" placeholder="CommandeAdmin pseudo" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="form-label">Prénom</label>
                <input asp-for="LastName" class="form-control rounded-pill" placeholder="Votre pseudo" />
                <span asp-validation-for="LastName" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control rounded-pill" placeholder="ex: client@mail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Tel" class="form-label">Téléphone</label>
                <input asp-for="Tel" class="form-control rounded-pill" placeholder="ex: client@mail.com" />
                <span asp-validation-for="Tel" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Mot de passe</label>
                <input asp-for="Password" class="form-control rounded-pill" type="password" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Adresse" class="form-label">Adresse</label>
                <input asp-for="Adresse" class="form-control rounded-pill" placeholder="Adresse complète" />
                <span asp-validation-for="Adresse" class="text-danger small"></span>
            </div>

            @* Facultatif : si tu veux afficher une liste des enseignes *@
            @*
            <div class="form-group mb-3">
            <label asp-for="EnseigneId" class="form-label">Enseigne</label>
            <select asp-for="EnseigneId" class="form-select rounded-pill" asp-items="ViewBag.Enseignes">
            <option disabled selected>-- Sélectionner une enseigne --</option>
            </select>
            <span asp-validation-for="EnseigneId" class="text-danger small"></span>
            </div>
            *@

            <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill mt-3" style="background-color: #ffb8c9; border: none;">
                <i class="bi bi-check-circle-fill me-2"></i>Créer mon compte
            </button>
        </form>

        <div class="text-center mt-3">
            <a asp-area="Identity" asp-page="/Account/LoginClient" asp-route-target="client" class="text-decoration-none text-secondary">
                <i class="bi bi-box-arrow-in-right"></i> Déjà un compte ? Se connecter
            </a>
        </div>
    </div>
</div>
